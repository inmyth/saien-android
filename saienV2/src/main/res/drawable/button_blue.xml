<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        
        <shape>
            <stroke android:width="5px" android:color="#50A8CD" />
            <gradient
                android:endColor="#119EDA"
                android:startColor="#95D8F5"
                android:angle="90"
                android:type="linear" />
			<corners android:radius="10dp" />

        </shape>
    </item>

    <item>     

        <shape>
            <stroke android:width="5px" android:color="#50A8CD" />
            <gradient
                android:endColor="#119EDA"
                android:startColor="#95D8F5"
                android:angle="270"
                android:type="linear" />
			<corners android:radius="10dp" />

        </shape>
    </item>
</selector>